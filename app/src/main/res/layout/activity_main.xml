<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitleMain" android:textSize="30sp"
            android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/c1"
            android:id="@+id/ivCharacter1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleMain"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/c2"
            android:id="@+id/ivCharacter2" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/ivCharacter1" app:layout_constraintEnd_toStartOf="@+id/ivCharacter3"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleMain"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/c3"
            android:id="@+id/ivCharacter3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleMain"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/c4"
            android:id="@+id/ivCharacter4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ivCharacter1"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/c5"
            android:id="@+id/ivCharacter5" app:layout_constraintStart_toEndOf="@+id/ivCharacter4"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ivCharacter2"
            app:layout_constraintEnd_toStartOf="@+id/ivCharacter6"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/c6"
            android:id="@+id/ivCharacter6" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ivCharacter3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
</android.support.constraint.ConstraintLayout>