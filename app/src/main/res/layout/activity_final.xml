<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FinalActivity">

    <TextView
            android:text="Winner!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWinner" android:textSize="34sp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="132dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="132dp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/ivWinner" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp"/>
</android.support.constraint.ConstraintLayout>