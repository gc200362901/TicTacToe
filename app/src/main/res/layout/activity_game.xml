<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageViewYou"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageViewOpponent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <TextView
            android:text="VS"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:id="@+id/tvVersus" android:textSize="58sp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewOpponent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewYou" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:fontFamily="@font/calligraffitti" android:textStyle="bold"/>
    <ImageView
            android:layout_width="335dp"
            android:layout_height="332dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/ivBackground"
            app:layout_constraintTop_toBottomOf="@+id/tvVersus" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/ivGrid1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/ivBackground"
            app:layout_constraintStart_toStartOf="@+id/ivBackground" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/ivGrid2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/ivBackground" app:layout_constraintStart_toEndOf="@+id/ivGrid1"
            app:layout_constraintEnd_toStartOf="@+id/ivGrid3" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/ivGrid3"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/ivBackground"
            app:layout_constraintEnd_toEndOf="@+id/ivBackground" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/ivGrid4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivGrid1"
            app:layout_constraintStart_toStartOf="@+id/ivBackground" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/ivGrid7" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivGrid4"
            app:layout_constraintStart_toStartOf="@+id/ivBackground" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/ivGrid5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivGrid2" app:layout_constraintStart_toEndOf="@+id/ivGrid4"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/ivGrid6" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/ivGrid6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivGrid3"
            app:layout_constraintEnd_toEndOf="@+id/ivBackground" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/ivGrid8" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivGrid5" app:layout_constraintStart_toEndOf="@+id/ivGrid7"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/ivGrid9" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivBackground" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/ivGrid9" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivGrid6"
            app:layout_constraintEnd_toEndOf="@+id/ivBackground" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="10dp" app:srcCompat="@android:color/holo_green_light"
            android:id="@+id/ivPlayerMove" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewYou" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="10dp" app:srcCompat="@android:color/holo_green_light"
            android:id="@+id/ivComputerMove" android:visibility="invisible" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewOpponent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"/>
</android.support.constraint.ConstraintLayout>